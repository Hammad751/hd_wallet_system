{
  "name": "hd-wallet-system-secure",
  "version": "2.0.0",
  "description": "Production-ready multi-chain HD wallet system with enterprise security",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "migrate": "npm run migrate:001 && npm run migrate:002 && npm run migrate:003 && npm run migrate:004 && npm run migrate:005",
    "migrate:001": "psql -U $DB_USER -d $DB_NAME -f migrations/001_initial_schema.sql",
    "migrate:002": "psql -U $DB_USER -d $DB_NAME -f migrations/002_security_tables.sql",
    "migrate:003": "psql -U $DB_USER -d $DB_NAME -f migrations/003_triggers.sql",
    "migrate:004": "psql -U $DB_USER -d $DB_NAME -f migrations/004_views.sql",
    "migrate:005": "psql -U $DB_USER -d $DB_NAME -f migrations/005_indexes_optimization.sql",
    "migrate:rollback": "psql -U $DB_USER -d $DB_NAME -f migrations/rollback.sql",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:security": "tail -f logs/security.log"
  },
  "keywords": [
    "wallet",
    "hd-wallet",
    "crypto",
    "blockchain",
    "security",
    "multi-chain",
    "bitcoin",
    "ethereum",
    "solana"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@ton/crypto": "^3.2.0",
    "@ton/ton": "^13.9.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.11",
    "tiny-secp256k1": "^2.2.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}